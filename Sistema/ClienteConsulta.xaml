            <TabItem Header="Equipamentos" HorizontalAlignment="Left" Name="tbiEquipamentos" VerticalAlignment="Top" IsEnabled="False" Selector.SelectionChanged="tbiEquipamentos_SelectionChanged" Background="#FFFF9F07">
