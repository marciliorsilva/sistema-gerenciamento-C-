                            <DataGridTextColumn Binding="{Binding Path=resolvidoPor}" Header="Resolvido Por" IsReadOnly="True" Width="100" />
                        </DataGrid.Columns>
                        <DataGrid.HorizontalGridLinesBrush>
                            <SolidColorBrush />
                        </DataGrid.HorizontalGridLinesBrush>
                        <DataGrid.RowBackground>
                            <SolidColorBrush />
                        </DataGrid.RowBackground>
                        <DataGrid.VerticalGridLinesBrush>
                            <SolidColorBrush />
                        </DataGrid.VerticalGridLinesBrush>
