                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="6,16,0,0" Name="cbFiltroEqpt" VerticalAlignment="Top" Width="98">
                        <ComboBoxItem Content="Busca por:" IsEnabled="False" IsSelected="True" />
                        <ComboBoxItem Content="Numero de Serie" />
                        <ComboBoxItem Content="Modelo" />
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Historico de Atendimentos" HorizontalAlignment="Left" Name="tbiHistorico" VerticalAlignment="Top" IsEnabled="False" Selector.SelectionChanged="tbiHistorico_SelectionChanged" Background="#FFFF9F07">
                <Grid>
                    <DataGrid AutoGenerateColumns="False" CanUserResizeRows="False" Height="378" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=atendimentoDataBinding}" Margin="6,6,6,0" Name="dtgAtendimento" VerticalAlignment="Top" Width="Auto" Loaded="dtgAtendimento_Loaded">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=codigo_atendimento}" Header="Codigo" Visibility="Hidden" />
                            <DataGridTextColumn Binding="{Binding Path=DataEntrada2}" Header="Data" IsReadOnly="True" Width="100" />
                            <DataGridTextColumn Binding="{Binding Path=horaEntrada}" Header="Hora" IsReadOnly="True" Width="70" />
                            <DataGridTextColumn Binding="{Binding Path=Usuario}" Header="Atendido por" IsReadOnly="True" Width="110" />
                            <DataGridTextColumn Binding="{Binding Path=cliente}" Header="Cliente" IsReadOnly="True" Width="110" />
