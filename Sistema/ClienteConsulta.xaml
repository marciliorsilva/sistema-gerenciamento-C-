                    <Button Content="Adicionar" Height="23" HorizontalAlignment="Left" Name="btAdicionarFilial" VerticalAlignment="Top" Width="98" Margin="6,45,0,0" Click="btAdicionarFilial_Click" />
                    <Button Content="Consultar" Height="23" HorizontalAlignment="Left" Margin="6,74,0,0" Name="btConsultarFilial" VerticalAlignment="Top" Width="98" IsEnabled="False" Click="btConsultarFilial_Click" />
                    <Button Content="Excluir" Height="23" HorizontalAlignment="Left" Margin="6,103,0,0" Name="btExcluirFilial" VerticalAlignment="Top" Width="98" IsEnabled="False" Click="btExcluirFilial_Click" />
