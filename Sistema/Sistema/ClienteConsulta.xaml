                    <TextBox Height="23" HorizontalAlignment="Left" Margin="15,176,0,0" Name="txtEmail" VerticalAlignment="Top" Width="245" />
                    <Label Content="Email" Height="28" HorizontalAlignment="Left" Margin="11,156,0,0" Name="label19" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="267,176,0,0" Name="txtTelefone" VerticalAlignment="Top" Width="140" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="413,176,0,0" Name="txtContato" VerticalAlignment="Top" Width="134" />
                    <Label Content="Telefone" Height="28" HorizontalAlignment="Left" Margin="263,156,0,0" Name="label8" VerticalAlignment="Top" />
                    <Label Content="Contato" Height="28" HorizontalAlignment="Left" Margin="409,156,0,0" Name="label20" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="439,267,0,0" Name="txtCep" VerticalAlignment="Top" Width="108" />
                    <TextBox Height="23" Margin="14,267,197,0" Name="txtEndereco" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="370,267,0,0" Name="txtNumero" VerticalAlignment="Top" Width="63" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="13,355,0,0" Name="txtComplemento" VerticalAlignment="Top" Width="109" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="249,312,0,0" Name="txtBairro" VerticalAlignment="Top" Width="184" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="439,312,0,0" Name="cbUF" VerticalAlignment="Top" Width="108">
                        <ComboBoxItem Content="AC" />
                        <ComboBoxItem Content="AL" />
                        <ComboBoxItem Content="AP" />
                        <ComboBoxItem Content="AM" />
                        <ComboBoxItem Content="BA" />
                        <ComboBoxItem Content="CE" />
                        <ComboBoxItem Content="DF" />
                        <ComboBoxItem Content="ES" />
                        <ComboBoxItem Content="ES" />
                        <ComboBoxItem Content="GO" />
                        <ComboBoxItem Content="MA" />
