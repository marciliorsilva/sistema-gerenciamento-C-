                    <Label Content="Ativo" Height="28" HorizontalAlignment="Left" Margin="170,201,0,0" Name="label5" VerticalAlignment="Top" />
                    <Label Content="Data de Cadastro" Height="28" HorizontalAlignment="Left" Margin="12,200,0,0" Name="label6" VerticalAlignment="Top" />
                    <Label Content="Inscrição Estudual" Height="28" HorizontalAlignment="Left" Margin="11,108,0,0" Name="label7" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="141,128,0,0" Name="txtIdentidade" VerticalAlignment="Top" Width="131" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="427,128,0,0" Name="cbSexo" VerticalAlignment="Top" Width="120">
