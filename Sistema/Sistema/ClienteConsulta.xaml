            </TabItem>
            <TabItem Header="Equipamentos" HorizontalAlignment="Left" Name="tbiEquipamentos" VerticalAlignment="Top" IsEnabled="False">
                <Grid>
                    <Button Content="Adicionar" Height="23" HorizontalAlignment="Left" Name="btAdicionarEqpt" VerticalAlignment="Top" Width="98" Margin="6,45,0,0" Click="btAdicionarEqpt_Click" />
                    <Button Content="Consultar" Height="23" HorizontalAlignment="Left" Margin="6,74,0,0" Name="btConsultarEqpt" VerticalAlignment="Top" Width="98" IsEnabled="False" />
                    <Button Content="Excluir" Height="23" HorizontalAlignment="Left" Margin="6,103,0,0" Name="btExcluirEqpt" VerticalAlignment="Top" Width="98" IsEnabled="False" Click="btExcluirEqpt_Click" />
                    <DataGrid AutoGenerateColumns="False" Height="339" HorizontalAlignment="Left" Margin="110,45,0,0" Name="dtgEqptCliente" ItemsSource="{Binding Path=eqptClienteDataBinding}" VerticalAlignment="Top" Width="445" Loaded="dtgEqptCliente_Loaded" SelectedCellsChanged="dtgEqptCliente_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=codigo_eqptCliente}" Header="Codigo" Visibility="Hidden" />
                            <DataGridTextColumn Binding="{Binding Path=Equipamento}" Header="Equipamento" Width="147" IsReadOnly="True"  />
                            <DataGridTextColumn Binding="{Binding Path=nrSerie}" Header="Numero de Serie" Width="157" IsReadOnly="True"  />
                            <DataGridTextColumn Binding="{Binding Path=Modelo}" Header="Modelo" Width="197" IsReadOnly="True"  />
                            
                        </DataGrid.Columns>
                        <DataGrid.HorizontalGridLinesBrush>
                            <SolidColorBrush />
                        </DataGrid.HorizontalGridLinesBrush>
                        <DataGrid.VerticalGridLinesBrush>
                            <SolidColorBrush />
                        </DataGrid.VerticalGridLinesBrush>
                        <DataGrid.RowBackground>
                            <SolidColorBrush />
                        </DataGrid.RowBackground>
                    </DataGrid>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="110,16,0,0" Name="txtPesquisaEqpt" VerticalAlignment="Top" Width="445" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="6,16,0,0" Name="cbFiltroEqpt" VerticalAlignment="Top" Width="98">
                        <ComboBoxItem Content="Busca por:" IsEnabled="False" IsSelected="True" />
                        <ComboBoxItem Content="Numero de Serie" />
                        <ComboBoxItem Content="Modelo" />
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Historico de Atendimentos" HorizontalAlignment="Left" Name="tbiHistorico" VerticalAlignment="Top" IsEnabled="False">
                <Grid>
                    <DataGrid AutoGenerateColumns="False" Height="342" HorizontalAlignment="Left" Margin="6,35,0,0" Name="dataGrid1" VerticalAlignment="Top" Width="549" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="cbFiltroAtend" VerticalAlignment="Top" Width="120" />
                    <TextBox Height="23" Margin="132,6,0,0" Name="txtPesquisaAtend" VerticalAlignment="Top" HorizontalAlignment="Left" Width="423" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
