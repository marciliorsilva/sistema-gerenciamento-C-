                    </ComboBox>
                    <Label Content="Numero" Height="28" HorizontalAlignment="Left" Margin="366,247,0,0" Name="label9" VerticalAlignment="Top" />
                    <Label Content="Complemento" Height="28" HorizontalAlignment="Left" Margin="10,332,0,0" Name="label10" VerticalAlignment="Top" />
                    <Label Content="UF" Height="28" HorizontalAlignment="Left" Margin="438,292,0,0" Name="label11" VerticalAlignment="Top" />
                    <Label Content="Endereço" Height="28" HorizontalAlignment="Left" Margin="10,247,0,0" Name="label12" VerticalAlignment="Top" />
                    <Label Content="Bairro" Height="28" HorizontalAlignment="Left" Margin="246,292,0,0" Name="label13" VerticalAlignment="Top" />
